<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="100vp"
    ohos:width="match_parent"
    ohos:orientation="horizontal"
    ohos:margin="2vp"
    >

    <Image
        ohos:id="$+id:image_item_follow_portrait"
        ohos:height="100vp"
        ohos:width="100vp"
        ohos:image_src="$media:ic_user_portrait"
        ohos:scale_mode="stretch"
        ohos:align_parent_left="true"/>

    <Text
        ohos:id="$+id:text_item_follow_author"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:max_text_lines="2"
        ohos:multiple_lines="true"
        ohos:text="老卫"
        ohos:text_size="24fp"
        ohos:margin="2vp"
        ohos:right_of="$id:image_item_follow_portrait"
        ohos:left_of="$id:layout_operate"/>

    <DirectionalLayout
        ohos:id="$+id:layout_operate"
        ohos:height="match_content"
        ohos:width="50vp"
        ohos:orientation="vertical"
        ohos:margin="2vp"
        ohos:align_parent_right="true">

        <Button
            ohos:id="$+id:button_item_delete"
            ohos:width="50vp"
            ohos:height="24vp"
            ohos:text_size="24fp"
            ohos:text="取关"
            ohos:margin="2vp"
            ohos:text_color="#FFFFFF"
            ohos:background_element="$graphic:background_button_red"
            />
    </DirectionalLayout>
</DependentLayout>