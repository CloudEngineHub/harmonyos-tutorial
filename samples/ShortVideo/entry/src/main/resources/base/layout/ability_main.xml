<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent">

    <!--视频滑动播放-->
    <PageSlider
        ohos:id="$+id:page_slider"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:above="$id:layout_navigation_bar"
        ohos:background_element="black"
        ohos:orientation="vertical"
        ohos:page_cache_size="0"/>

    <!--导航栏-->
    <DirectionalLayout
        ohos:id="$+id:layout_navigation_bar"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:orientation="horizontal">

        <Button
            ohos:id="$+id:button_main"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:text="首页"
            ohos:text_color="#ffffff"
            ohos:text_size="18fp"
            ohos:weight="1">
        </Button>

        <Button
            ohos:id="$+id:button_friend"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:text="朋友"
            ohos:text_color="#e6e6e6"
            ohos:text_size="18fp"
            ohos:weight="1">
        </Button>

        <Button
            ohos:id="$+id:button_add"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:text="✚"
            ohos:text_color="#ffffff"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Button>

        <Button
            ohos:id="$+id:button_msg"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:text="消息"
            ohos:text_color="#e6e6e6"
            ohos:text_size="18fp"
            ohos:weight="1">
        </Button>

        <Button
            ohos:id="$+id:button_me"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:text="我"
            ohos:text_color="#e6e6e6"
            ohos:text_size="18fp"
            ohos:weight="1">
        </Button>
    </DirectionalLayout>

</DependentLayout>