<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:align_parent_bottom="true"
        ohos:layout_alignment="bottom"
        ohos:padding="15vp">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alignment="vertical_center"
            ohos:orientation="horizontal">

            <Image
                ohos:id="$+id:image_portrait"
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:image_src="$media:ic_user_portrait"
                ohos:scale_mode="stretch"/>

            <Text
                ohos:id="$+id:text_author"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="鸿蒙系统"
                ohos:text_color="#ffffff"
                ohos:text_size="25fp"
                ohos:text_weight="700"/>
            <Button
                ohos:id="$+id:button_follow"
                ohos:height="20vp"
                ohos:width="match_content"
                ohos:background_element="$graphic:background_button_red"
                ohos:layout_alignment="horizontal_center"
                ohos:text="关注"
                ohos:text_alignment="center"
                ohos:text_color="#fefefe"
                ohos:text_size="20fp"
                />
        </DirectionalLayout>

        <Text
            ohos:id="$+id:text_content"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:margin="3vp"
            ohos:max_text_lines="2"
            ohos:multiple_lines="true"
            ohos:text="HarmonyOS是一款面向万物互联时代的、全新的分布式操作系统。"
            ohos:text_color="#ffffff"
            ohos:text_size="16fp"
            ohos:top_margin="25vp"
            ohos:truncation_mode="ellipsis_at_end"/>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:align_parent_bottom="true"
        ohos:align_parent_right="true"
        ohos:bottom_margin="80vp"
        ohos:layout_alignment="right|bottom"
        ohos:padding="15vp">

        <Image
            ohos:id="$+id:image_thumbsup"
            ohos:height="32vp"
            ohos:width="32vp"
            ohos:image_src="$media:ic_public_favor"
            ohos:scale_mode="stretch"/>

        <Text
            ohos:id="$+id:text_thumbs_up_count"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="0"
            ohos:text_color="#ffffff"
            ohos:text_size="12vp"/>

        <Image
            ohos:id="$+id:image_comment"
            ohos:height="32vp"
            ohos:width="32vp"
            ohos:image_src="$media:ic_public_comments"
            ohos:scale_mode="stretch"/>

        <Text
            ohos:id="$+id:text_comment_count"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="0"
            ohos:text_color="#ffffff"
            ohos:text_size="12vp"/>

        <Image
            ohos:id="$+id:image_favorit"
            ohos:height="32vp"
            ohos:width="32vp"
            ohos:image_src="$media:ic_public_highlights"
            ohos:scale_mode="stretch"/>

        <Text
            ohos:id="$+id:text_favorit_count"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="0"
            ohos:text_color="#ffffff"
            ohos:text_size="12vp"/>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:id="$+id:controller_bottom_layout"
        ohos:height="20vp"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:background_element="#88000000"
        ohos:left_padding="10vp"
        ohos:orientation="vertical"
        ohos:right_padding="10vp">

        <DirectionalLayout
            ohos:height="0vp"
            ohos:width="match_parent"
            ohos:alignment="vertical_center"
            ohos:orientation="horizontal"
            ohos:weight="2">

            <Image
                ohos:id="$+id:play_controller"
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:horizontal_center="true"
                ohos:image_src="$media:ic_public_pause_norm"
                ohos:scale_mode="stretch"
                />

            <Text
                ohos:id="$+id:current_time"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:right_margin="5vp"
                ohos:text="00:00:00"
                ohos:text_color="#ffffff"
                ohos:text_size="12vp"/>

            <Slider
                ohos:id="$+id:progress"
                ohos:height="35vp"
                ohos:width="0vp"
                ohos:orientation="horizontal"
                ohos:progress_color="#FFFFFF"
                ohos:progress_width="5vp"
                ohos:weight="1"/>

            <Text
                ohos:id="$+id:end_time"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:right_margin="5vp"
                ohos:text="00:00:00"
                ohos:text_color="#ffffff"
                ohos:text_size="12vp"/>

        </DirectionalLayout>

    </DirectionalLayout>

</DependentLayout>