<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Button
        ohos:id="$+id:button_on"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="#F76543"
        ohos:layout_alignment="horizontal_center"
        ohos:margin="10vp"
        ohos:padding="10vp"
        ohos:text="On"
        ohos:text_size="40vp"
        />

    <Button
        ohos:id="$+id:button_off"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="#F76543"
        ohos:layout_alignment="horizontal_center"
        ohos:margin="10vp"
        ohos:padding="10vp"
        ohos:text="Off"
        ohos:text_size="40vp"
        />

</DirectionalLayout>