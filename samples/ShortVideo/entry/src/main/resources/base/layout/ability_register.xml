<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#DDDDDD"
    ohos:orientation="vertical">

    <Image
        ohos:id="$+id:image_register_user_portrait"
        ohos:height="108vp"
        ohos:width="108vp"
        ohos:image_src="$media:ic_user_portrait"
        ohos:layout_alignment="horizontal_center"
        ohos:scale_mode="stretch"
        ohos:top_margin="100vp"/>

    <TextField
        ohos:id="$+id:textfield_username"
        ohos:height="50vp"
        ohos:width="319vp"
        ohos:background_element="#FFFFFF"
        ohos:hint="请输入账号"
        ohos:hint_color="#999999"
        ohos:layout_alignment="horizontal_center"
        ohos:text_alignment="center"
        ohos:text_size="17fp"
        ohos:top_margin="76vp"
        />

    <TextField
        ohos:id="$+id:textfield_password"
        ohos:height="50vp"
        ohos:width="319vp"
        ohos:background_element="#FFFFFF"
        ohos:hint="请输入密码"
        ohos:hint_color="#999999"
        ohos:layout_alignment="horizontal_center"
        ohos:text_alignment="center"
        ohos:text_input_type="pattern_password"
        ohos:text_size="17fp"
        ohos:top_margin="10vp"
        />

    <Button
        ohos:id="$+id:button_login"
        ohos:height="50vp"
        ohos:width="319vp"
        ohos:background_element="$graphic:background_button_blue"
        ohos:layout_alignment="horizontal_center"
        ohos:text="登录/注册"
        ohos:text_alignment="center"
        ohos:text_color="#fefefe"
        ohos:text_size="24vp"
        ohos:top_margin="76vp"
        />

</DirectionalLayout>