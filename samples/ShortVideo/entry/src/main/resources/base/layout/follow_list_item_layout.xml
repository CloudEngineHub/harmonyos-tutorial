<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:margin="10vp"
    >

    <Image
        ohos:id="$+id:image_item_follow_portrait"
        ohos:height="60vp"
        ohos:width="60vp"
        ohos:image_src="$media:ic_user_portrait"
        ohos:scale_mode="stretch"
        ohos:align_parent_left="true"/>

    <Text
        ohos:id="$+id:text_item_follow_author"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="老卫"
        ohos:text_size="18fp"
        ohos:left_margin="10vp"
        ohos:right_margin="10vp"
        ohos:right_of="$id:image_item_follow_portrait"
        ohos:left_of="$id:layout_operate"
        ohos:vertical_center="true"/>

    <DirectionalLayout
        ohos:id="$+id:layout_operate"
        ohos:height="60vp"
        ohos:width="50vp"
        ohos:orientation="vertical"
        ohos:alignment="vertical_center"
        ohos:margin="2vp"
        ohos:align_parent_right="true">

        <Button
            ohos:id="$+id:button_item_delete"
            ohos:width="50vp"
            ohos:height="match_content"
            ohos:text_size="18fp"
            ohos:text="取关"
            ohos:margin="2vp"
            ohos:text_color="#FFFFFF"
            ohos:background_element="$graphic:background_button_red"
            ohos:vertical_center="true"
            />
    </DirectionalLayout>
</DependentLayout>