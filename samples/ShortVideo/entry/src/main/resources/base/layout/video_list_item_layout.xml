<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="180vp"
    ohos:width="match_parent"
    ohos:orientation="horizontal"
    ohos:margin="2vp"
    >

    <Image
        ohos:id="$+id:image_item_video_cover"
        ohos:height="180vp"
        ohos:width="136vp"
        ohos:image_src="$media:ic_user_portrait"
        ohos:scale_mode="stretch"/>

    <Text
        ohos:id="$+id:text_item_video_content"
        ohos:height="match_content"
        ohos:width="200vp"
        ohos:max_text_lines="5"
        ohos:multiple_lines="true"
        ohos:text="HarmonyOS是一款面向万物互联时代的、全新的分布式操作系统。"
        ohos:text_size="24fp"
        ohos:margin="2vp"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="vertical"
        ohos:margin="2vp">

        <Button
            ohos:width="50vp"
            ohos:height="24vp"
            ohos:text_size="24fp"
            ohos:text="编辑"
            ohos:margin="2vp"
            ohos:text_color="#FFFFFF"
            ohos:background_element="$graphic:background_button_blue"
            />

        <Button
            ohos:width="50vp"
            ohos:height="24vp"
            ohos:text_size="24fp"
            ohos:text="删除"
            ohos:margin="2vp"
            ohos:text_color="#FFFFFF"
            ohos:background_element="$graphic:background_button_red"
            />
    </DirectionalLayout>
</DirectionalLayout>